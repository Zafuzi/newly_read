@{
    ViewBag.Title = "Comments Page";
}

<div class="container">
    <h1> Your comment was recieved. </h1>
    <div class="comment-container">
        <p>From: <i>@ViewBag.Email</i></p>
        <blockquote>@ViewBag.Comment</blockquote>
        @if (ViewBag.Consent == "true,false") {
            <p>Thanks for the insight. You'll be hearing from our people. In the meantime why don't you read some <a href="/Home/Category/?id=general">news</a>?</p>
        } else {
            <p>Thanks for the insight. Now why don't you read some <a href="/Home/Category/?id=general">news</a>?</p>
        }
    </div>
</div>

<script type="text/javascript">
    console.log('@ViewBag.Consent');
</script>